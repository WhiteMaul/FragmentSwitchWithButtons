<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.thunderstorm.fragmentswitchwithbuttons.FragmentOne">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Numero di telefono"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/telefono_text"
                android:layout_weight="1"
                android:elevation="1dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="phone"
                android:ems="10"
                android:layout_weight="1"
                android:textSize="20sp"
                android:id="@+id/telefono_fill" />

            <TextView
                android:text="CittÃ "
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/citta_text"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:text="@android:string/selectTextMode"
                android:ems="10"
                android:id="@+id/citta_fill"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:text="Via"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/via_text"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/via_fill"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/password_text"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_fill"
                android:layout_weight="1" />

            <TextView
                android:text="Ripeti Password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/ripeti_password_text"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ripeti_password_fill"
                android:layout_weight="1" />

            <Button
                android:text="Gestione Notifiche"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/BottoneNotifiche"
                android:layout_weight="1" />

            <Button
                android:text="Salva Modifiche"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/BottoneModifiche" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
